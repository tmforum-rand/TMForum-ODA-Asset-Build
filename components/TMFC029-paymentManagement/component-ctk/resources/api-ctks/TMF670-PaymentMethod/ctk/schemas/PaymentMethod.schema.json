{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "@type": {
            "type": "string",
            "enum": [
                "Cash",
                "DigitalWallet",
                "TokenizedCard",
                "BankAccountTransfer",
                "BankAccountDebit",
                "BankCard",
                "Voucher",
                "Check",
                "BucketPaymentMethod",
                "AccountPaymentMethod",
                "LoyaltyPaymentMethod",
                "DirectDebit"
            ]
        }
    },
    "required": [
        "@type",
        "name"
    ]
}