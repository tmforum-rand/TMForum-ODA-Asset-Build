{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "provideAlternative": {
            "type": "boolean"
        },
        "submittedGeographicAddress": {
            "type": "object",
            "properties": {
                "streetNr": {
                    "type": "string"
                },
                "streetName": {
                    "type": "string"
                },
                "streetType": {
                    "type": "string"
                },
                "postcode": {
                    "type": "string"
                },
                "locality": {
                    "type": "string"
                },
                "city": {
                    "type": "string"
                },
                "stateOrProvince": {
                    "type": "string"
                },
                "country": {
                    "type": "string"
                },
                "geographicSubAddress": {
                    "type": "array"
                }
            },
            "required": [
                "city",
                "country",
                "geographicSubAddress",
                "locality",
                "postcode",
                "stateOrProvince",
                "streetName",
                "streetNr",
                "streetType"
            ]
        }
    },
    "required": [
        "provideAlternative",
        "submittedGeographicAddress"
    ]
}